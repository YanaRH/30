name: CI/CD Pipeline

on:
  push:
    branches:
      - main  # или ваша основная ветка

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.8'  # Укажите вашу версию Python

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run tests
        run: |
          python manage.py test

  deploy:
    runs-on: ubuntu-latest
    needs: test
    if: success()  # Деплой только при успешном прохождении тестов
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Deploy to server
        env:
          SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
          SERVER_IP: ${{ secrets.SERVER_IP }}
          USERNAME: ${{ secrets.USERNAME }}
        run: |
          echo "$SSH_PRIVATE_KEY" > private_key
          chmod 600 private_key
          scp -o StrictHostKeyChecking=no -i private_key -r . $USERNAME@$SERVER_IP:/path/to/your/project
          ssh -o StrictHostKeyChecking=no -i private_key $USERNAME@$SERVER_IP "cd /path/to/your/project && source venv/bin/activate && git pull && pip install -r requirements.txt && sudo systemctl restart myproject"